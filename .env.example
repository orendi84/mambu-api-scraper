# Mambu Scraper Environment Variables
# Copy this file to .env and fill in your values

# API Configuration
API_VERSION=v2  # Options: v1, v2, payments, streaming
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LANGUAGE=all    # Options: all, curl, http, javascript, ruby, python, java, go, php

# Output Configuration
OUTPUT_DIR=./mambu_api_output
DELAY_BETWEEN_PAGES=1.0

# Google Drive Configuration
# These IDs should be kept secure and not hardcoded in the source code
GOOGLE_DRIVE_TARGET_FOLDER_ID=your_target_folder_id_here
GOOGLE_DRIVE_ARCHIVE_FOLDER_ID=your_archive_folder_id_here

# Docker Configuration
RUNNING_IN_DOCKER=false  # Will be set to true in Docker container

# Google Service Account
# Path to service account credentials file
GOOGLE_APPLICATION_CREDENTIALS=drive_service_account_credentials.json
